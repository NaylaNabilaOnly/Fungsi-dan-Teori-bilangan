#Modifikasi fungsi fibonacci agar hasilnya disimpan dalam list dan ditampilkan sekaligua
def fibonacci(n):
...     if n <= 1:
...         return n
...     else:
...         return fibonacci(n - 1) + fibonacci(n - 2)
...
>>> num = int(input("Masukan jumlah suku: "))
Masukan jumlah suku: 8
>>> for i in range(num):
...     list.append(fibonacci(i))
...
>>> print("List Fibonacci jumlah suku:", num)
List Fibonacci jumlah suku: 8
>>> print("List Fibonacci: ", list)
List Fibonacci:  [0, 1, 1, 2, 3, 5, 8, 13]

#Membuat Fungsi baru untuk mencari bilangan prima antara 1-N
>>>def fibonacci(n):
...     if n <= 1:
...         return n
...     else:
...         return fibonacci(n - 1) + fibonacci(n - 2)
...
>>> num = int(input("Masukan jumlah suku: "))
Masukan jumlah suku: 8
>>> for i in range(num):
...     list.append(fibonacci(i))
...
>>> print("List Fibonacci jumlah suku:", num)
List Fibonacci jumlah suku: 8
>>> print("List Fibonacci: ", list)
List Fibonacci:  [0, 1, 1, 2, 3, 5, 8, 13]
    
#membuat grafik perbandingan anatara fungsi linear dengan fungsi kuadrat menggunakan matplotlib
>>>import numpy as np
>>> import matplotlib.pyplot as plt
>>>
>>> def f_linear(x): return 2 * x + 3
...
>>> def f_kuadrat(x): return x**2 + 2 * x + 1
...
>>>
>>> x = np.linspace (-5, 5, 100)
>>>
>>> plt.plot(x, f_linear(x), label="Linear: 2 * x + 3")
[<matplotlib.lines.Line2D object at 0x000001F2FA718690>]
>>> plt.plot(x, f_kuadrat(x),label="kuadrat: x**2 + 2 * x + 1")
[<matplotlib.lines.Line2D object at 0x000001F2FA7187D0>]
>>>
>>> plt.title("Pebandingan fungsi linear dan fungsi kuadrat")
Text(0.5, 1.0, 'Pebandingan fungsi linear dan fungsi kuadrat')
>>> plt.xlabel("x")
Text(0.5, 0, 'x')
>>> plt.ylabel("f(x)")
Text(0, 0.5, 'f(x)')
>>> plt.legend()
<matplotlib.legend.Legend object at 0x000001F2FA6AB620>
>>> plt.grid(True)
>>> plt.show()
